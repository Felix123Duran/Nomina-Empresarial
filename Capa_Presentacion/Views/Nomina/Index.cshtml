@model IEnumerable<Capa_Entidaddes.Nomina>

@{
    ViewBag.Title = "Index";
}

<h2>Nomina</h2>
<link href="~/Content/Table.css" rel="stylesheet" />
<p>
    @Html.ActionLink("Nueva Nomina", "Crear","Nomina", new {@class="btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_nomina)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_Empleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desde)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hasta)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID_nomina)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_Empleado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desde)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hasta)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.ID_nomina }, new {@class="btn btn-primary" }) |
            @Html.ActionLink("Delete", "Eliminar", new {  id=item.ID_nomina  }, new {@class="btn btn-danger" })
        </td>
    </tr>
}

</table>
