@model IEnumerable<Capa_Entidaddes.Transaccion>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Transacciones </h2>
<link href="~/Content/Table.css" rel="stylesheet" />
<p>
    @Html.ActionLink("Nueva Transacion",  // texto
                 "Crear", // action
                 "Transaccion",  // controlador
                 new { @class = "btn btn-success" }) // html attributes
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_Transaccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_Tipo_Transaccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID_Transaccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_Tipo_Transaccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estatus)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.ID_Transaccion  }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id = item.ID_Transaccion }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
