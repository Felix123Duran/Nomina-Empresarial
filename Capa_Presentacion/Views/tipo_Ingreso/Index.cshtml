@model IEnumerable<Capa_Entidaddes.Tipos_Ingresos>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Ingresos</h2>
<link href="~/Content/Table.css" rel="stylesheet" />
<p>
    @Html.ActionLink("Nuevo Ingreso", "Crear", "Tipo_Ingreso", new {@class="btn btn-success" })
</p>.
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_Ingresos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salario_estandar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID_Ingresos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salario_estandar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new {  id=item.ID_Ingresos  }, new {@class="btn btn-primary" }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id = item.ID_Ingresos }, new {@class="btn btn-danger" })
        </td>
    </tr>
}

</table>
